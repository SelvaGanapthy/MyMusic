<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearView"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop=".8dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_effects">

        <ImageView
            android:id="@+id/ivSong"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#FF8080"
            android:scaleType="fitXY" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="108dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMainName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:singleLine="true"
                android:text="SongTitle"
                android:textColor="#FFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvSubName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:singleLine="true"
                android:text="ArtistName"
                android:textColor="#FFF"
                android:textSize="13sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvSongTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="75dp"
            android:text="6:00"
            android:textColor="#FFF" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/ic_play_arrow_white_24dp" />


        <View
            android:id="@+id/lineCode"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="64.5dp" />

    </androidx.cardview.widget.CardView>


</LinearLayout>