<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/notificationbg"
        android:gravity="center"
        android:orientation="horizontal">
        <!--android:background="@drawable/cover_bg"-->

        <ImageView
            android:id="@+id/imageView_notification"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:src="@drawable/default_album_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="2dp"
            tools:ignore="RtlCompat">

            <TextView
                android:id="@+id/songTitle_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Song Name"
                android:textColor="#FFF"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/totalTimes_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="movie name"
                android:textColor="#C0C0C0"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/btnPrevious_notification"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:layout_margin="0dp"
                android:src="@drawable/ic_action_previous" />

            <ImageView
                android:id="@+id/btnPlay_notification"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="0dp"
                android:src="@drawable/ic_pause_black_24dp" />

            <ImageView
                android:id="@+id/btnNext_notification"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:layout_margin="0dp"
                android:src="@drawable/ic_action_next" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>