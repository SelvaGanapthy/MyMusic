<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#36474f"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_notification"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_album_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/songTitle_notification"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity=""
                android:paddingStart="10dp"
                android:singleLine="true"
                android:text="fdfdfdfdf"
                android:textColor="#FFF"
                android:textSize="20dp"
                tools:ignore="RtlCompat" />


            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_close_black_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/totalTimes_notification"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/poppins"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:text="main name"
            android:textColor="#fff"
            android:textSize="18sp"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.4"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/btnPrevious_notification"
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:layout_margin="2.5dp"
                android:layout_weight="1"
                android:src="@drawable/ic_action_previous" />


            <ImageView
                android:id="@+id/btnPlay_notification"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2.5dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pause_black_24dp" />


            <ImageView
                android:id="@+id/btnNext_notification"
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:layout_margin="2.5dp"
                android:layout_weight="1"
                android:src="@drawable/ic_action_next" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>